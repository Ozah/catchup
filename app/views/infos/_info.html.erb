<li>
  <% if info.info_type && (
          info.info_type == "Website" ||
          info.info_type == 'Social account' )  %>
    <%= link_to info.content, "http://" << info.content << '/' %>
  <% else %>
    <%= link_to info.content, info.content %>
  <% end %>
  <% if current_user?(info.user) %>
    <%= link_to "delete", info, method: :delete,
                id: "delete_info",
                data: { confirm: "Are you sure?" },
                title: "delete",
                "data-position-to" => "window"
    %>
  <% end %>
</li>