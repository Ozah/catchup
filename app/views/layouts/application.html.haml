!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1", "user-scalable" => "no"}/
    %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}/
    %meta{:name => "apple-mobile-web-app-status-bar-style", :content => "black"}/
    %title Catchup

    = stylesheet_link_tag "http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.css"
    = javascript_include_tag "http://code.jquery.com/jquery-1.9.1.min.js"
    = javascript_include_tag "http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.js"

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"

    = csrf_meta_tags
  %body
    %div{"data-role" => "page", "data-fullscreen" => "true", "data-dom-cache" => "true"}
      = yield :heading

      %div{"data-role" => "content"}
        #container
          - flash.each do |key, value|
            = content_tag(:div, value, id: "alert-#{key}")
        = yield
        = debug(params) if Rails.env.development?

      %div{"data-role" => "footer", "data-position" => "fixed"}
        %h1 Footer
