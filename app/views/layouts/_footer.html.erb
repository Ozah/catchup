<%
   profile_class = contacts_class = catchup_class = list_class = info_class = ''
   active = "ui-btn-active ui-state-persist"
   case true
      when footer_tab == 'profile'  then profile_class  = active
      when footer_tab == 'contacts' then contacts_class = active
      when footer_tab == 'catchup'  then catchup_class  = active
      when footer_tab == 'list'     then list_class     = active
      when footer_tab == 'map'     then map_class      = active
   end
%>
<div data-role="footer" data-id="main-footer" data-position="fixed" data-tap-toggle="false" id="main-footer">
  <div data-role="navbar">
    <ul>
      <li><%= link_to "Profile", user_path(current_user),"data-icon" => "home",
                      "class" => profile_class %>
      </li>
      <li><%= link_to "Contacts", contacts_path,"data-icon" => "star",
                      "class" => contacts_class %>
      </li>
      <li><%= link_to "Catchup", new_user_meeting_path(current_user),"data-icon" => "add",
                      "class" => catchup_class, "id" => "catchup_footer" %>
      </li>
      <li><%= link_to "History", user_show_list_path(current_user),"data-icon" => "grid",
                      "class" => list_class %>
      </li>
      <li><%= link_to "Map", user_show_map_path(current_user),"data-icon" => "grid",
                      "class" => map_class %>
      </li>
    </ul>
  </div>
</div>