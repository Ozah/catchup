<% if @user.errors.any? %>
  <div id="error_explanation">
    The form contains <%= pluralize(@user.errors.count, "error") %>.
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <% unless message.include? "Password digest can't be blank" %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>